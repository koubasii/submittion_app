<h1>Books</h1>

<!--一覧画面-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><a><%= link_to 'Show', book %></a></td>
      <td><a><%= link_to 'Edit', edit_book_path(book) %></a></td>
      <td><a><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></a></td>
    </tr>
     <% end %>
  </tbody>
</table>

<!--ここから新規投稿-->
<h2>New book</h2>


<% if @book.errors.any? %>
  <div class='error-count'><%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %></div>

<%= form_with model: Book.new do |f| %>

<div class="field">
<label for="book_title">Title</label><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book_body">Body</label><br>
  <%= f.text_area :body %>
</div>


    <%= f.submit 'Create Book' %>

<% end %>

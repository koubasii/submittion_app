<h1>Editing Book</h1>

<% if @book.errors.any? %>

<%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>

<div class="field">
  <label for="book_title">Title</label><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label for="book_body">Body</label><br>
  <%= f.text_area :body %>
</div>

<div class="button">
  <%= f.submit 'Update Book' %>
</div>

<% end %>

<a><%= link_to 'Show', @book %></a>
|
<a><%= link_to 'Back', '/books'%></a>


